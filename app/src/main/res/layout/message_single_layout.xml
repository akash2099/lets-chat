<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/single_message_linear_layout"
    android:layout_width="match_parent"

    android:layout_height="wrap_content"
    android:gravity="left"
    >

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:id="@+id/message_layout"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

        <TextView

            android:id="@+id/single_message_text_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="1dp"
            android:maxWidth="320dp"
            android:minWidth="120dp"
            android:padding="8dp"
            android:text="Display message"
            android:textColor="@android:color/black"

            android:textSize="16sp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="right"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/message_seen_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:padding="16dp"></ImageView>

            <TextView
                android:id="@+id/message_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:paddingRight="12dp"
                android:text="10:00 pm"
                android:textSize="10sp">

            </TextView>
        </LinearLayout>
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="#eeeeee"
        android:backgroundTint="#eeeeee"
        android:orientation="vertical"
        android:visibility="visible"
        android:id="@+id/share_layout"
        android:layout_marginRight="8dp"
        android:layout_marginLeft="8dp"
        android:layout_marginTop="3dp"
        android:layout_marginBottom="3dp"
        >

        <ImageView
            android:layout_margin="4dp"
            android:id="@+id/single_message_image"
            android:layout_width="240dp"
            android:layout_height="240dp"
            android:layout_weight="1"

            android:scaleType="fitXY"
            android:visibility="visible" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="right">

            <ImageView
                android:id="@+id/share_seen_status"
                android:layout_width="16dp"
                android:layout_height="16dp"
                android:padding="16dp"></ImageView>

            <TextView
                android:id="@+id/share_time"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="10sp"
                android:text="10:00 pm"
               android:paddingRight="12dp"
                >
            </TextView>


        </LinearLayout>

    </LinearLayout>

</RelativeLayout>